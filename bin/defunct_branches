#!/bin/sh --

if [ "$2" == "" ]; then
	echo "Usage: $0 [PAQ|PAM] <itrac jsessionid> <release...>"
	exit 1
fi

if [ "$1" == "PAM" ]; then
	PREFIX=http://svn.apama.com/dev/branches/dev/
elif [ "$1" == "PAQ" ]; then
	PREFIX=http://svn.apama.com/dev/analyticskit/branches/dev/
else
	echo "Please specify PAM or PAQ branches to check"
	exit 1
fi
shift

