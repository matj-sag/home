#!/usr/bin/env bash

CURRENT="`svn info | sed -n '/^Repository Root/s/[^:]*: //p'`"

set -e

if [ "${CURRENT:0:5}" = "http:" ]; then
	READONLY="`sed 's/http:/svn:/;s,$,/dev,' <<< "$CURRENT"`"
	echo -n "Switching to read-only repository..."
	svn switch --relocate "$CURRENT" "$READONLY"
	echo done
fi
